{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "mocha",
      "node"
    ],
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./dist",                              
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,

    "strict": true,               
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
